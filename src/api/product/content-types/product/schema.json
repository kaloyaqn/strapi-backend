{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Products",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "price": {
      "type": "decimal"
    },
    "price_euro": {
      "type": "decimal"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "active": {
      "type": "boolean"
    },
    "quantity": {
      "type": "integer"
    },
    "brand": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::brand.brand",
      "inversedBy": "product"
    },
    "slug": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "short": {
      "type": "richtext"
    },
    "seo": {
      "type": "string"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "related": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product"
    },
    "attributes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::attribute-value.attribute-value",
      "inversedBy": "products"
    }
  }
}
