{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "orders",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "phone": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "postalCode": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    },
    "total": {
      "type": "decimal"
    },
    "delivery_fee": {
      "type": "decimal"
    },
    "order_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "completed",
        "cancelled",
        "returned"
      ]
    },
    "payment_status": {
      "type": "enumeration",
      "enum": [
        "paid",
        "not-paid"
      ]
    },
    "date": {
      "type": "date"
    },
    "order_item": {
      "type": "component",
      "repeatable": true,
      "component": "shared.order-item"
    },
    "recaptchaToken": {
      "type": "string"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    }
  }
}
